<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    /*设置字体大小，在文本框末尾显示图片*/
    <TextView
        android:text="我爱android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:drawableEnd="@drawable/ic_launcher"
        />

    /*设置文本太长，中间省略。所有字母大写*/
    <TextView
        android:text="我爱android我爱android我爱android我爱android我爱android我爱android我爱android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textAllCaps="true"
        />

    /*对电话，邮件增加链接*/
    <TextView
        android:text="邮件是123@qq.com,电话是13456789090"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:autoLink="email|phone"
        />

    /*设置文本颜色，大小，并且使用阴影*/
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试文字测试文字"
        android:shadowColor="#00f"
        android:shadowDx="10.0"
        android:shadowDy="8.0"
        android:shadowRadius="3.0"
        android:textColor="#f00"
        android:textSize="18pt"
        />

        /*测试密码框*/
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/passwd"
            android:text="@string/hello"
            android:password="true"
            />

        /*可选择文本框*/
        <CheckedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可选择文本"
            android:checkMark="@drawable/ok"
            />

</LinearLayout>
